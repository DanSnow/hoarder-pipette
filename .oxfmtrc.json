{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "experimentalTailwindcss": {
    "attributes": ["className"],
    "functions": ["cn"]
  },
  "experimentalSortImports": {
    "groups": [["builtin"], ["external"], ["internal"], ["parent", "sibling", "index"]],
    "internalPattern": ["~/", "@/"],
    "newlinesBetween": true,
    "sortSideEffects": true
  },
  "ignorePatterns": [
    "!*.ts",
    "!*.tsx",
    "!*.js",
    "!*.jsx",
    "!**/*.ts",
    "!**/*.tsx",
    "!**/*.js",
    "!**/*.jsx",
    "**/dist/**",
    "**/docs/.astro/**",
    "**/node_modules/**",
    "**/components/ui/autoform/**",
    "**/src/entrypoints/options/routeTree.gen.ts",
    "**/storybook-static/**",
    "**/.vite-inspect/**",
    "**/.moon/cache/**",
    "src/shared/client/**",
    ".output/**",
    ".wxt/**"
  ]
}
